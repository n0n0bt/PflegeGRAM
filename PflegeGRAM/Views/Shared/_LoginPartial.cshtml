@using Microsoft.AspNetCore.Identity
@using PflegeGRAM.Areas.Identity.Pages.Account
@using PflegeGRAM.Areas.Identity.Data

@inject SignInManager<PflegeGRAMBenutzer> SignInManager
@inject UserManager<PflegeGRAMBenutzer> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
        //Mujo ubacio za login i register <div class="btn btn-info border border-1 border-secondary">
        <li class="nav-item">
            <div class="btn btn-info border border-1 border-secondary m-2">
                <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </div>
        </li>
    
    <li class="nav-item">
        <div class="btn btn-info border border-1 border-secondary m-2">
            <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Anmelden</a>
        </div>
    </li>
}
</ul>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}